@model IEnumerable<VismaUtvikler.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="customers" class="table table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirmName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostalCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FaxNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MailAdress)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr >
        <td>
            @item.FirmName
        </td>
        <td>
            @item.Adress
        </td>
        <td>
            @item.PostalCode
        </td>
        <td>
            @item.PhoneNumber
        </td>
        <td>
            @item.FaxNumber
        </td>
        <td>
            @item.MailAdress
        </td>
        <td>


            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |

            <button data-customer-id="@item.Id" class="btn btn-link js-delete">Delete  @item.Id</button>
        
            @Html.ActionLink("legg til Kontakt", "NyKontakt", new { id = item.Id })
        </td>
        
    </tr>
}

</table>


@section scripts{
    
    <script>
        $(document).ready(function() {
            $("#customers ").on("click",".js-delete",function () {
                var button = $(this);

                //bootbx confirm er et alternativ til vanlig confirmbox
                bootbox.confirm("Er du sikker på at du vil slette denne kunden?", function(result) {
                    if (result) {

                        $.ajax({
                            url: "/api/customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                console.log("Kunden er slettet success!!");
                                button.parents("tr").remove();
                            }
                        })

                    }
                })
                
            })
        });
    </script>

}